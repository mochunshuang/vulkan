{
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "terminal.integrated.profiles.windows": {
        "PowerShell -NoProfile": {
            "source": "PowerShell",
            "args": [
                "-NoProfile",
                "-NoExit",
                "-Command",
                "chcp 65001"
            ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell -NoProfile",
    // clangd 也有差距。请使用和编译期绑定的
    // "clangd.path": "D:/mysoftware/clangd_20.1.8/bin/clangd.exe",
    "clangd.path": "E:/mysoftware/llvm-mingw-20250910-ucrt-x86_64/bin/clangd.exe",
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--log=verbose",
        "--pretty",
        "-j=8",
        "--pch-storage=disk",
        "--experimental-modules-support"
    ],
    "cmake.generator": "Ninja",
    // cmake-tool 自己选择更好
    // "cmake.debugConfig": {
    //     "type": "lldb",
    //     "miDebuggerPath": "D:/mysoftware/gcc-14.1.0-llvm-18.1.7-mingw-w64ucrt-12.0.0/mingw32/bin/lldb.exe",
    // },
    // "cmake.debugConfig": {
    //     "type": "cppdbg",
    //     "miDebuggerPath": "D:/mysoftware/x86_64-14.2.0-release-posix-seh-ucrt-rt_v12/mingw64/bin/gdb.exe"
    // },
    // clangd 或 c_cpp
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.default.cppStandard": "gnu++20",
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "[Default Dark Modern]": {
            "enabled": true,
            "rules": {
                "operator": "#dd1735"
            }
        }
    },
    // 允许灰色擦拭提示
    "editor.inlayHints.enabled": "on",
    "editor.bracketPairColorization.enabled": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    // 高亮的对括号
    "[cpp]": {
        // "editor.language.brackets": [
        //     ["(",")"],
        //     ["{","}"],
        //     ["[","]"],
        //     ["<",">"]
        // ],
        "editor.language.colorizedBracketPairs": [
            [
                "(",
                ")"
            ],
            [
                "{",
                "}"
            ],
            [
                "[",
                "]"
            ],
            [
                "<",
                ">"
            ]
        ]
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "markup.other.log.error",
                "settings": {
                    "foreground": "#FF0000"
                }
            },
            {
                "scope": "markup.other.log.warn",
                "settings": {
                    "foreground": "#c500f7cc"
                }
            },
            {
                "scope": "markup.other.log.info",
                "settings": {
                    "foreground": "#2cd0d3"
                }
            },
            {
                "scope": "markup.other.log.debug",
                "settings": {
                    "foreground": "#888585"
                }
            },
            {
                "scope": "markup.other.log.highlight",
                "settings": {
                    "foreground": "#19ff04"
                }
            }
        ],
        "[Default Dark Modern]": {
            "textMateRules": [
                {
                    "scope": "entity.name.namespace.cpp",
                    "settings": {
                        "foreground": "#d4d3d3"
                    }
                },
                // :: 命名空间
                {
                    "scope": "punctuation.separator.scope-resolution.cpp",
                    "settings": {
                        "foreground": "#d4d3d3"
                    }
                },
                {
                    "scope": "punctuation.separator.scope-resolution.function.call.cpp",
                    "settings": {
                        "foreground": "#d4d3d3"
                    }
                },
                // 参数
                {
                    "scope": "entity.name.type.parameter",
                    "settings": {
                        "foreground": "#f66ecd"
                    }
                },
                // 函数部分
                {
                    "scope": "entity.name.function.cpp",
                    "settings": {
                        "foreground": "#e3e775"
                    }
                },
                {
                    "scope": "entity.name.function.member.cpp",
                    "settings": {
                        "foreground": "#e3e775"
                    }
                }
                // 概念，结构化绑定部分
                // {
                //     "scope": "meta.block.cpp",
                //     "settings": {
                //         "foreground": "#9CDCFE"
                //     }
                // }
            ]
        }
    },
    "better-comments.tags": [
        {
            "tag": "Note:",
            "color": "#00cc44", // 你可以选择任何你喜欢的颜色
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": true
        }
    ]
}